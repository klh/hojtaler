[Service]
CPUAccounting=yes

# allow real-time threads
CPUSchedulingPolicy=rr
CPUSchedulingPriority=9
LimitRTPRIO=infinity

# optional: raise I/O priority to prevent SD-card stalls
IOSchedulingClass=best-effort
IOSchedulingPriority=7

User=dietpi
Group=audio
ExecStart=
ExecStart=/usr/bin/snapclient --player alsa --sampleformat {{HZ}}:{{BITRATE}}:{{CHANNELS}} --disable-audio-cache --initial-volume {{VOLUME}}"
Restart=on-failure
RestartSec=4
